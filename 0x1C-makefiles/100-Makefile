#Usage:
#make  #compile all binary

.PHONY: all, clean, oclean, fclean, re

CC = gcc

SRC = main.c holberton.c

NAME = holberton

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

all: NAME


NAME: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

clean:
	$(RM) *~ ${NAME}

oclean:
	$(RM) ${OBJ}

fclean: clean oclean

re: oclean all
