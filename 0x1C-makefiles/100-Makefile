#Usage:
#make  #compile all binary

.PHONY: all clean oclean fclean re

CC = gcc

SRC = main.c holberton.c

NAME = holberton

OBJ = $(SRC:.c=.o)

CFLAGS = -Wall -Werror -Wextra -pedantic

all: NAME


NAME: m.h $(SRC:.c=.o)
	${CC} $(SRC:.c=.o) -o ${NAME}

clean:
	$(RM) *~ ${NAME}

oclean:
	$(RM) ${OBJ}

fclean: clean oclean

re: oclean all
